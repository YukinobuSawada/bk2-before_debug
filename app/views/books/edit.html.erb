<p class= "message"><%= render 'layouts/notifications',book: @book %>
	
<div class="row">
	<div class="col-md-6 col-md-offset-3">

		<h1>Editing Book</h1>

		<%= form_for(@book,url:"/books/#{@book.id}")do|f|%>
	<div class="col-xs-12">
	<label for="book_title">Title</label>
	<%=f.text_field :title %>

	</div>
	<div class="field row">
	<label for="book_body">Opinion</label>
	<%=f.text_area :body %>
	</div>
	<div class="actions row">
	<%=f.submit'Update Book',class: 'btn btn-primary col-xs-12%' %>
	</div>
	<% end %>
		<%= link_to "Show", book_path(@book), class: "book_#{@book.id}" %>
		<%= link_to "Back", books_path, class: "back" %>

	</div>
	<div class="col-md-3"></div>

</div>